{
  "manifest_version": 3,
  "name": "Inspip",
  "description": "Inspip | Pipe Wallet Extension",
  "version": "0.1.5",
  "action": {
    "default_popup": "index.html",
    "default_icon": "logo.png"
  },
  "permissions": [
    "tabs",
    "storage",
    "activeTab"
  ],
  "host_permissions": ["*://*/*"],
  "content_scripts": [
    {
      "js": ["src/content.tsx"],
      "matches": ["<all_urls>"]
    }
  ]
}
